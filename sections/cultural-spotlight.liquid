{{ 'section-cultural-spotlight.css' | asset_url | stylesheet_tag }}

<div class="cultural-spotlight color-{{ section.settings.color_scheme }} gradient{% if section.settings.title == blank %} no-heading{% endif %}">
  <div class="page-width">
    <div class="cultural-spotlight__wrapper">
      {%- unless section.settings.title == blank -%}
        <h2 class="cultural-spotlight__heading tamil-heading inline-richtext">
          {{ section.settings.title }}
        </h2>
      {%- endunless -%}

      {%- unless section.settings.description == blank -%}
        <div class="cultural-spotlight__description rte tamil-text">
          {{ section.settings.description }}
        </div>
      {%- endunless -%}

      <div class="cultural-spotlight__grid">
        {%- for block in section.blocks -%}
          <div class="cultural-spotlight__item kolam-border tamil-pattern" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              <div class="cultural-spotlight__image-wrapper temple-arch">
                <img
                  srcset="
                    {%- if block.settings.image.width >= 165 -%}{{ block.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                    {%- if block.settings.image.width >= 535 -%}{{ block.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
                    {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                    {%- if block.settings.image.width >= 1070 -%}{{ block.settings.image | image_url: width: 1070 }} 1070w,{%- endif -%}
                    {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                    {{ block.settings.image | image_url }} {{ block.settings.image.width }}w
                  "
                  src="{{ block.settings.image | image_url: width: 1500 }}"
                  sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  class="cultural-spotlight__image"
                >
              </div>
            {%- endif -%}

            <div class="cultural-spotlight__content">
              {%- if block.settings.tamil_term != blank -%}
                <h3 class="cultural-spotlight__tamil-term tamil-text cultural-accent">
                  {{ block.settings.tamil_term }}
                </h3>
              {%- endif -%}

              {%- if block.settings.english_translation != blank -%}
                <h4 class="cultural-spotlight__english-translation">
                  {{ block.settings.english_translation }}
                </h4>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <div class="cultural-spotlight__item-description rte tamil-text">
                  {{ block.settings.description }}
                </div>
              {%- endif -%}

              {%- if block.settings.link_label != blank -%}
                <a
                  href="{{ block.settings.link }}"
                  class="cultural-spotlight__link cultural-button {% if block.settings.link_style == 'secondary' %}secondary{% endif %}"
                  {% if block.settings.link_target == '_blank' %}target="_blank"{% endif %}
                >
                  {{ block.settings.link_label }}
                  <span class="icon-wrap">&nbsp;→</span>
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>

      {%- if section.settings.button_label != blank -%}
        <div class="cultural-spotlight__button-wrapper">
          <a
            href="{{ section.settings.button_link }}"
            class="cultural-spotlight__button cultural-button{% if section.settings.button_style_secondary %} cultural-button--secondary{% endif %}"
            {% if section.settings.button_target == '_blank' %}target="_blank"{% endif %}
          >
            {{ section.settings.button_label | escape }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .cultural-spotlight {
    padding: var(--ravan-spacing) 0;
  }

  .cultural-spotlight__wrapper {
    text-align: center;
  }

  .cultural-spotlight__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: var(--ravan-spacing);
    margin-top: calc(var(--ravan-spacing) * 1.5);
  }

  .cultural-spotlight__item {
    text-align: left;
    transition: transform 0.3s ease;
  }

  .cultural-spotlight__item:hover {
    transform: translateY(-5px);
  }

  .cultural-spotlight__image-wrapper {
    margin-bottom: 1rem;
    border-radius: 10px;
    overflow: hidden;
  }

  .cultural-spotlight__image {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .cultural-spotlight__content {
    padding: 1rem;
  }

  .cultural-spotlight__tamil-term {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--ravan-maroon);
  }

  .cultural-spotlight__english-translation {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--ravan-saffron);
  }

  .cultural-spotlight__item-description {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .cultural-spotlight__link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    font-weight: 500;
  }

  .cultural-spotlight__button-wrapper {
    margin-top: calc(var(--ravan-spacing) * 2);
  }

  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    .cultural-spotlight__grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 1rem;
    }

    .cultural-spotlight {
      padding: 1rem 0;
    }

    .cultural-spotlight__tamil-term {
      font-size: 1.1rem;
    }

    .cultural-spotlight__english-translation {
      font-size: 0.9rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .cultural-spotlight__tamil-term {
      color: var(--ravan-saffron);
    }

    .cultural-spotlight__english-translation {
      color: var(--ravan-gold);
    }
  }
</style>

